<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.sonatype.oss</groupId>
		<artifactId>oss-parent</artifactId>
		<version>7</version>
	</parent>
	<groupId>uk.co.techblue</groupId>
	<artifactId>docusign-restclient</artifactId>
	<version>1.0.0</version>
	<name>Docusign RESTful client</name>
	<packaging>jar</packaging>
	<description>A client library to communicate with docusign restful services </description>
	<url>http://www.technologyblueprint.co.uk/</url>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<resteasy.version>2.3.3.Final</resteasy.version>
	</properties>

	<licenses>
		<license>
			<name>The Apache Software License, Version 2.0</name>
			<url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
			<distribution>repo</distribution>
		</license>
	</licenses>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-source-plugin</artifactId>
				<executions>
					<execution>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<version>2.4</version>
				<executions>
					<execution>
						<id>docusign-restclient-dto-jar</id>
						<phase>compile</phase>
						<goals>
							<goal>jar</goal>
						</goals>
						<configuration>
							<finalName>${project.artifactId}-dto-${project.version}</finalName>
							<includes>
								<include>uk/co/techblue/docusign/client/dto/**</include>
								<include>uk/co/techblue/docusign/client/BaseDto*</include>
								<include>uk/co/techblue/docusign/client/envelope/attributes/**</include>
								<include>uk/co/techblue/docusign/client/exception/**</include>
							</includes>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-install-plugin</artifactId>
				<executions>
					<execution>
						<id>docusign-restclient-dto-jar-install</id>
						<phase>install</phase>
						<goals>
							<goal>install-file</goal>
						</goals>
						<configuration>
							<packaging>jar</packaging>
							<groupId>${project.groupId}</groupId>
							<artifactId>${project.artifactId}-dto</artifactId>
							<version>${project.version}</version>
							<file>
								${project.build.directory}/${project.artifactId}-dto-${project.version}.jar
							</file>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>org.jboss.resteasy</groupId>
			<artifactId>resteasy-jaxrs</artifactId>
			<version>${resteasy.version}</version>
		</dependency>
		<dependency>
			<groupId>org.jboss.resteasy</groupId>
			<artifactId>resteasy-jackson-provider</artifactId>
			<version>${resteasy.version}</version>
		</dependency>
		<dependency>
			<groupId>org.jboss.resteasy</groupId>
			<artifactId>resteasy-multipart-provider</artifactId>
			<version>${resteasy.version}</version>
		</dependency>
		<dependency>
			<groupId>org.apache.commons</groupId>
			<artifactId>commons-lang3</artifactId>
			<version>3.1</version>
		</dependency>
		<dependency>
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
			<version>1.2.14</version>
			<scope>compile</scope>
		</dependency>
	</dependencies>

	<scm>
		<connection>scm:git:ssh://github.com:techblue/docusign-restclient.git</connection>
		<developerConnection>scm:git:ssh://git@github.com:techblue/docusign-restclient.git</developerConnection>
		<url>https://github.com/techblue/docusign-restclient</url>
	</scm>

	<developers>
		<developer>
			<name>Ajay Deshwal</name>
			<email>ajay.deshwal@techblue.co.uk</email>
			<roles>
				<role>Author</role>
			</roles>
		</developer>
	</developers>
</project>